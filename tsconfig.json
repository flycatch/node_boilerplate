{
  "compilerOptions": {
    "strict": true,
    "target": "es2016",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "removeComments": true,
    "sourceMap": false,
    "newLine": "lf",
    "rootDir": "./src",
    "outDir": "./dist",
    "experimentalDecorators": true,
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": "./src/main",
    "paths": {
      "@constants": ["node/constants"],
      "@utils": ["node/utils/index.util"],
      "@utils/*": ["node/utils/*"],
      "@flags/*": ["node/flags/*"],
      "@services/*": ["node/services/*"],
      "@commands/*": ["node/commands/*"],
      "@commands": ["node/commands/index.commands"],
      "@config": ["node/config/index.config"],
      "@config/*": ["node/config/*"],
      "@properties": ["resources/app.properties"],
      "@resources/*": ["resources/*"],
      "@app/*": ["node/*"]
    }
  },
  "include": [
    "src/**/*",
    "src/**/*.json",
  ]
}
